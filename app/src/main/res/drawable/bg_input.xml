<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="#FFFFFF" />

    <!-- Đường viền -->
    <stroke
        android:width="1dp"
        android:color="#A3D8F4" />

    <!-- Góc bo tròn -->
    <corners android:radius="12dp" />

    <!-- Padding bên trong (nếu cần) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
