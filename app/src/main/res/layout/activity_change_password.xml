<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/pastelBackground">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu mới"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>


    <!-- 1. MẬT KHẨU CŨ -->
    <LinearLayout
        android:id="@+id/layout_old"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/edt_old_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Nhập mật khẩu cũ"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:textColor="@color/inputText"
            android:textColorHint="@color/inputHint"/>

        <ImageView
            android:id="@+id/iv_old_toggle"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_eye_off"
            android:padding="4dp"/>
    </LinearLayout>


    <!-- 2. MẬT KHẨU MỚI -->
    <LinearLayout
        android:id="@+id/layout_new"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/layout_old"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:textColor="@color/inputText"
            android:textColorHint="@color/inputHint"/>

        <ImageView
            android:id="@+id/iv_new_toggle"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_eye_off"
            android:padding="4dp"/>
    </LinearLayout>


    <!-- 3. XÁC NHẬN MẬT KHẨU -->
    <LinearLayout
        android:id="@+id/layout_confirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/layout_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:textColor="@color/inputText"
            android:textColorHint="@color/inputHint"/>

        <ImageView
            android:id="@+id/iv_confirm_toggle"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_eye_off"
            android:padding="4dp"/>
    </LinearLayout>


    <!-- BUTTON CẬP NHẬT -->
    <Button
        android:id="@+id/btn_update_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Cập nhật mật khẩu"
        android:textColor="@color/white"
        android:backgroundTint="@color/pastelPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/layout_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>


    <!-- QUAY LẠI -->
    <TextView
        android:id="@+id/tv_back_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại trang cá nhân"
        android:textColor="@color/pastelPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_update_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
