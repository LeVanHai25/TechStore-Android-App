<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastelBackground">

    <!-- ðŸ”¹ Header -->
    <!-- ðŸ”¹ Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <!-- ChÃ o ngÆ°á»i dÃ¹ng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/greeting"
                android:textColor="@color/titleColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_default"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Logo trÃ²n ngang hÃ ng -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_logo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_tech_store"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeColor="@color/pastelPrimary"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <!-- ðŸ” Thanh tÃ¬m kiáº¿m -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/desc_search_icon"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@color/titleColor" />

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_search"
                android:textColor="@color/inputText"
                android:textColorHint="@color/inputHint"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:autofillHints="search" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ·ï¸ Danh má»¥c -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/category_laptop"
                style="@style/CategoryItemStyle"
                android:text="Laptop"
                android:background="@drawable/bg_category_selected" />

            <TextView
                android:id="@+id/category_mouse"
                style="@style/CategoryItemStyle"
                android:text="Chuá»™t"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/category_phone"
                style="@style/CategoryItemStyle"
                android:text="Äiá»‡n thoáº¡i"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/category_headphone"
                style="@style/CategoryItemStyle"
                android:text="Tai nghe"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- ðŸ›’ Danh sÃ¡ch sáº£n pháº©m -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false" />

    <!-- âš™ï¸ Bottom Navigation hiá»‡n Ä‘áº¡i -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_nav"

        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextAppearanceActive="@style/BottomNavTextAppearance"
        app:itemTextAppearanceInactive="@style/BottomNavTextAppearance"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"

        />
</LinearLayout>
