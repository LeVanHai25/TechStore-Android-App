<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tiền tối thiểu (₫)"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_min_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Ví dụ: 10000000"
        android:inputType="number"
        android:background="@drawable/bg_input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Phần trăm giảm (%)"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_discount_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Ví dụ: 10"
        android:inputType="number"
        android:background="@drawable/bg_input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Mô tả (tùy chọn)"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Mô tả khuyến mãi"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:background="@drawable/bg_input" />

</LinearLayout>


