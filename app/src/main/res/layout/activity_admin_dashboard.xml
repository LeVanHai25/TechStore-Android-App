<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Dashboard"
                android:textColor="#333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton

                android:id="@+id/btn_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Logout"
                android:src="@drawable/ic_logout" />
        </LinearLayout>

        <!-- Stats Boxes -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="3">

            <!-- Users -->
            <LinearLayout
                android:id="@+id/card_users"
                style="@style/DashboardCard"
                android:background="@drawable/bg_profile_gradient">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_user_count"
                    style="@style/DashboardCardText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Users" />
            </LinearLayout>

            <!-- Products -->
            <LinearLayout
                android:id="@+id/card_products"
                style="@style/DashboardCard"
                android:background="@color/pastelPink">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_box"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_product_count"
                    style="@style/DashboardCardText"
                    android:text="Products" />
            </LinearLayout>

            <!-- Orders -->
            <LinearLayout
                android:id="@+id/card_orders"
                style="@style/DashboardCard"
                android:background="@color/pastelGreen">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_order"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/tv_order_count"
                    style="@style/DashboardCardText"
                    android:text="Orders" />
            </LinearLayout>

            <!-- Revenue -->
            <LinearLayout
                android:id="@+id/card_revenue"
                style="@style/DashboardCard"
                android:background="@color/pastelBlue">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_money"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/tv_revenue"
                    style="@style/DashboardCardText"
                    android:text="Revenue" />
            </LinearLayout>

            <!-- Reviews -->
            <LinearLayout
                android:id="@+id/card_reviews"
                style="@style/DashboardCard"
                android:background="#2196F3">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_review"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DashboardCardText"
                    android:text="Reviews" />
            </LinearLayout>

            <!-- Promotions -->
            <LinearLayout
                android:id="@+id/card_promotions"
                style="@style/DashboardCard"
                android:background="#FF9800">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_promotion"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DashboardCardText"
                    android:text="Promotions" />
            </LinearLayout>

        </GridLayout>

        <LinearLayout
            android:id="@+id/filter_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Spinner
                android:id="@+id/spinner_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/days" />

            <Spinner
                android:id="@+id/spinner_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/months" />

            <Spinner
                android:id="@+id/spinner_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/years" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:text="Lá»c" />


        <!-- Pie Chart: Order Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Order Status"
            android:textColor="#555"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_status"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            />

        <!-- Bar Chart: Revenue by Month -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Monthly Revenue"
            android:textColor="#555"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart_revenue"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
             />

    </LinearLayout>
</ScrollView>
