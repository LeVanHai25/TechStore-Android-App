<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/pastelBackground">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/titleColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <!-- Họ tên -->
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Họ tên"
        android:background="@drawable/bg_input"
        android:inputType="textPersonName"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/inputText"
        android:textColorHint="@color/inputHint"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Email -->
    <EditText
        android:id="@+id/edt_old_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:background="@drawable/bg_input"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/inputText"
        android:textColorHint="@color/inputHint"
        app:layout_constraintTop_toBottomOf="@id/edt_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Mật khẩu có biểu tượng con mắt -->
    <LinearLayout
        android:id="@+id/layout_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_input"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/edt_old_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:textColor="@color/inputText"
            android:textColorHint="@color/inputHint"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/iv_toggle_password"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_eye_off"
            android:contentDescription="Ẩn/hiện mật khẩu" />
    </LinearLayout>

    <!-- Số điện thoại -->
    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Số điện thoại"
        android:background="@drawable/bg_input"
        android:inputType="phone"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/inputText"
        android:textColorHint="@color/inputHint"
        app:layout_constraintTop_toBottomOf="@id/layout_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Địa chỉ có icon location -->
    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_input"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/edt_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Chọn hoặc nhập địa chỉ"
            android:background="@android:color/transparent"
            android:paddingStart="12dp"
            android:textColor="@color/inputText"
            android:textColorHint="@color/inputHint"
            android:focusable="false"
            android:cursorVisible="false" />

        <ImageView
            android:id="@+id/iv_open_map"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_location"
            app:tint="@color/pastelPrimary"
            android:contentDescription="Nhập địa chỉ thủ công hoặc chọn bản đồ" />
    </LinearLayout>

    <!-- Nút đăng ký -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Đăng ký"
        android:backgroundTint="@color/pastelPrimary"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/layout_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Chuyển qua màn hình đăng nhập -->
    <TextView
        android:id="@+id/tv_go_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã có tài khoản? Đăng nhập"
        android:textColor="@color/pastelPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
