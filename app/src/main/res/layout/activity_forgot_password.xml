<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/pastelBackground">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/titleColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp" />

    <EditText
        android:id="@+id/edt_old_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nhập email của bạn"
        android:inputType="textEmailAddress"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="@color/inputHint"
        android:textColor="@color/inputText"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btn_update_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Gửi yêu cầu"
        android:textColor="@color/white"
        android:backgroundTint="@color/pastelPrimary"
        app:layout_constraintTop_toBottomOf="@id/edt_old_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tv_back_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại đăng nhập"
        android:textColor="@color/pastelPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_update_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
