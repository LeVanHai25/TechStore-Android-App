<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/img_product_cart"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_border"
            android:src="@drawable/placeholder"
            android:contentDescription="@string/product_image" />

        <!-- Thông tin sản phẩm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/tv_cart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Tên sản phẩm"
                android:textColor="@color/titleColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Giá sản phẩm -->
            <TextView
                android:id="@+id/tv_cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="35.990.000₫"
                android:textColor="@color/pastelPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Số lượng và nút thao tác -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Nút giảm -->
                <ImageView
                    android:id="@+id/btn_decrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_button_circle"
                    android:padding="6dp"
                    android:src="@drawable/ic_remove"
                    android:contentDescription="@string/decrease_quantity" />

                <!-- Số lượng -->
                <TextView
                    android:id="@+id/tv_cart_quantity"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/titleColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Nút tăng -->
                <ImageView
                    android:id="@+id/btn_increase"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_button_circle"
                    android:padding="6dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="@string/increase_quantity" />

                <!-- Nút xóa -->
                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/bg_button_circle_delete"
                    android:padding="6dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="@string/delete_item" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
